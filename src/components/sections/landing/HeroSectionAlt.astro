<style>

  .button .instagram {
    margin-right: 12px;
    fill: black;
  }
  .button {
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
  
    &:hover {
      cursor: pointer;
      color: red;

      .instagram {
