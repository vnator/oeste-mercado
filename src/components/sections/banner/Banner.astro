<style>

    .banner {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        height: 500px;
        margin-top: 40px;
    }

    .item {
        width: 100%;
        height: 100%;
        position: relative;
        border-radius: 10px;
        overflow: hidden;
    
        & img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    .column {
        width: 30%;
        height: 100%;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: stretch;
        height: calc(500px - 1rem);

        & .item {
            min-height: 50%;
            
            &:last-child {
                margin-top: 1rem;
            }
        }
    }

    .__main {
        width: 70%;
    }

    .text {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: auto;
        padding: .5rem;
        background-color: rgba(255, 255, 255, .6);
        color: var(--sl-color-gray-1);

        & h1 {
            font-size: 1.5em;
        }
    }

    @media (max-width: 768px) {
        .banner {
            flex-direction: column;
            height: auto;
            gap: 0;
        }

        .column {
            width: 100%;
            height: auto;
            flex-grow: 0;
            margin-top: 1rem;
        }

        .item {
            height: 300px;
            width: 100%;
        }
    }

</style>